generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  username   String  @unique
  password   String
  profileImg String?
}

model Chat {
  id        Int       @id @default(autoincrement())
  members   Int[]
  updatedAt DateTime? @updatedAt
}

model Message {
  id         Int      @id @default(autoincrement())
  chatId     Int
  senderId   Int
  receiverId Int
  text       String
  image      String?
  createdAt  DateTime @default(now())
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt DateTime
}
